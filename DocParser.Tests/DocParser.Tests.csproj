<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="TestFiles\TextTestDoc1.txt" />
    <None Remove="TestFiles\WordTestDoc1.docx" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="TestFiles\TextTestDoc1.txt">
